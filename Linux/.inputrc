# ==============================================================================
# READLINE CONFIGURATION
# ==============================================================================
# ~/.inputrc: Configuration for GNU Readline library
# Used by bash, python REPL, and other readline-enabled applications
# See: man 3 readline for full documentation

# ==============================================================================
# VI MODE CONFIGURATION
# ==============================================================================
# Enable vi editing mode (instead of default emacs mode)
set editing-mode vi

# Set keyseq timeout to reduce ESC key delay (in milliseconds)
# Default is 500ms. Lower values make ESC more responsive but may cause
# issues with pasted text or slow terminal connections
set keyseq-timeout 100

# ------------------------------------------------------------------------------
# Mode String Configuration
# ------------------------------------------------------------------------------
# Display mode indicator in the prompt
# Shows (cmd) for command mode, (ins) for insert mode
set show-mode-in-prompt on

# Customize mode indicators with colors
# Format: \1 = start non-printing, \2 = end non-printing
# \e[1;32m = bold green, \e[0m = reset
# set vi-ins-mode-string \1\e[1;32m\2\1\e[0m\2
# set vi-cmd-mode-string \1\e[1;34m\2\1\e[0m\2

# ------------------------------------------------------------------------------
# Cursor Shape Configuration
# ------------------------------------------------------------------------------
# Change cursor shape based on vi mode
# Block cursor for command mode, line cursor for insert mode
# This uses the vi-cmd-mode-string and vi-ins-mode-string with embedded escape codes
set vi-cmd-mode-string "\1\e[2 q\2"
set vi-ins-mode-string "\1\e[6 q\2"

# ==============================================================================
# COMPLETION SETTINGS
# ==============================================================================
# Treat hyphens and underscores as equivalent when completing
set completion-map-case on

# Display completions immediately without requiring double-tab
set show-all-if-ambiguous on

# Show file type indicators (/, @, *) in completions
set visible-stats on

# Colorize completion candidates by file type
set colored-stats on

# Append slash to completed directory names
set mark-directories on

# ==============================================================================
# SEARCH CONFIGURATION
# ==============================================================================
# Incremental history search with arrow keys
# Up/Down arrows search history based on what's already typed
"\e[A": history-search-backward
"\e[B": history-search-forward

# ==============================================================================
# KEYBINDINGS - INSERT MODE
# ==============================================================================
set keymap vi-insert

# History navigation
"\C-p": previous-history          # Ctrl+P: previous command
"\C-n": next-history              # Ctrl+N: next command

# Word movement
"\eb": backward-word              # Alt+B: move backward one word
"\ef": forward-word               # Alt+F: move forward one word

# Line navigation
"\C-a": beginning-of-line         # Ctrl+A: go to start of line
"\C-e": end-of-line               # Ctrl+E: go to end of line

# Line editing
"\C-k": kill-line                 # Ctrl+K: delete from cursor to end of line
"\C-u": backward-kill-line        # Ctrl+U: delete from cursor to start of line
"\C-w": backward-kill-word        # Ctrl+W: delete word before cursor

# ==============================================================================
# KEYBINDINGS - COMMAND MODE
# ==============================================================================
set keymap vi-command

# History navigation (same as insert mode for consistency)
"\C-p": previous-history          # Ctrl+P: previous command
"\C-n": next-history              # Ctrl+N: next command

# Word movement
"\eb": backward-word              # Alt+B: move backward one word
"\ef": forward-word               # Alt+F: move forward one word

# Line navigation
"\C-a": beginning-of-line         # Ctrl+A: go to start of line
"\C-e": end-of-line               # Ctrl+E: go to end of line

# Line editing
"\C-k": kill-line                 # Ctrl+K: delete from cursor to end of line
"\C-u": backward-kill-line        # Ctrl+U: delete from cursor to start of line
"\C-w": backward-kill-word        # Ctrl+W: delete word before cursor
